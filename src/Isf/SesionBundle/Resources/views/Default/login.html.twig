{% extends '::base.html.twig' %}
{% block menu_items %}
{% endblock %}
{% block logueo%}
<div class="container" align="middle" style="padding:40px;">
    <div class="col-md-4 col-md-offset-4">

        {% for flashMessage in app.session.flashbag.get('aviso') %}
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}

        {#% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ error.message|trans }}
            </div>
        {% endif %#}

        <div class="card">
          <img class="card-img-top" data-src="..." alt="Card image cap">
          <div class="card-block">
            <h4 class="card-title">Card title</h4>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Button</a>
          </div>
        </div>


        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title"> Inicio de sesión </div>
            </div>

            <div style="padding-top:30px" class="panel-body" >
                {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}

                    <div style="margin-bottom: 15px" class="input-group">
                        {{ form_errors(form) }}
                    </div>

                    <div style="margin-bottom: 15px" class="input-group">
                        {{ form_errors(form.username) }}
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        {{ form_widget(form.username, {'attr': {'placeholder': 'Nombre de usuario', 'class':'form-control', 'autofocus':'true'} }) }}
                    </div>

                    <div style="margin-bottom: 15px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-qrcode"></i></span>
                        {{ form_widget(form.password, {'attr': {'placeholder': 'Contraseña', 'class':'form-control'} }) }}
                    </div>

                    <div class="input-group">
                        {{ form_rest(form) }}
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Ingresar
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
                <br>
        </div>
    </div>
</div>
{% endblock %}
