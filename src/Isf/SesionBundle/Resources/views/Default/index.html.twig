{% extends '::menu.html.twig' %}
{% block contenido %}
<div class="container">
    <div class="jumbotron">
        <h1>
            <small> <img src="data:;base64, {{ app.user.imagen | trim}}" alt="Imágen personal" /> </small>
            Bienvenid@ {{ app.user.username }}!
        </h1>
        {#<p> Tu clave es "{{ app.user.password }}" </p>#}

        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#miAyuda">
            <i class="fa fa-book fa-lg" aria-hidden="true"></i> &nbsp;cómo usar el sistema
        </button>
        <div class="modal fade" id="miAyuda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">La ayuda viene en camino...</h4>
                    </div>
                    <div class="modal-body">
                        Se está escribiendo <br>
                        <div class="text-xs-center">
                            <i class="fa fa-font fa-4x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-3x" aria-hidden="true"></i>
                            <i class="fa fa-font fa-2x" aria-hidden="true"></i>
                            <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary-outline" data-dismiss="modal"> cerrar </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
