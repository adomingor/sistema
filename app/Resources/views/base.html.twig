<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SIGEINAF{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/bootstrap/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
            {#<link href="{{ asset('bundles/bootstrap/css/bootstrap-theme.css') }}" type="text/css" rel="stylesheet" />#}
            <link href="{{ asset('smartmenus/addons/bootstrap/jquery.smartmenus.bootstrap.css') }}" media="all" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/normalize.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/estilos.css') }}" type="text/css" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
            <link href="{{ asset('fonts/fontAwesome/css/font-awesome.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/bootstrap-datepicker3.css') }}" type="text/css" rel="stylesheet" />
            <!-- <link href="{{ asset('bundles/kartik-v/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" /> -->
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        {% block menu %}
        <!-- Navbar fixed top -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Alternar menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" title="Ir a la página principal" href="{{ url('isf_publico_homepage') }}" >
                        <img class="logo_isi_menu" src="{{asset(app.session.get('iconoPagina') is not empty ? app.session.get('iconoPagina') : 'images/logo_empresa_simple.png')}}" alt="Logo" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    {% block menu_items %}
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="{{ url('isf_sesion_homepage') }}">
                                            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>&nbsp;&nbsp;Volver al sistema
                                        </a>
                                    </li>
                                    {% include "li_usuario.html.twig" %}
                                </ul>
                            {% else %}
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="{{ url('login') }}">
                                            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>&nbsp;&nbsp;Iniciar Sesión
                                        </a>
                                    </li>
                                </ul>
                            {% endif %}
                    {% endblock %}


                </div><!--/.nav-collapse -->
            </div><!--/.container -->
        </div>
        {% endblock %}

        {% block logueo %}
        {% endblock %}

        {% block contenido %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/bootstrap/js/bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('smartmenus/jquery.smartmenus.js') }}" type="text/javascript"></script>
            <script src="{{ asset('smartmenus/addons/bootstrap/jquery.smartmenus.bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/libreria.js') }}" type="text/javascript"></script>
            <!-- <script src="{{ asset('bundles/kartik-v/js/fileinput.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/kartik-v/js/fileinput_locale_es.js') }}" type="text/javascript"></script> -->
        {% endblock %}

        {% block piePagina%}
            <div class="clearfix" />
                <footer class="text-center text-muted">
                    <br>
                    <hr>
                    <div class="row">
                        <div class="col-md-4">
                            <!-- <img class="img-responsive" src="{{asset('images/logo_marca_tucuman_256.png')}}" alt="Logo" /> -->
                        </div>
                        <div class="col-md-4">
                            <p>SISTEMA DE GESTION INTEGRAL DE NIÑEZ, ADOLESCENCIA Y FAMILIA (SIGEINAF)</p>
                            <p> Departamento de Informática. 2015 - 2016</p>
                            <p> Secretaría de Estado de Niñez, Adolescencia y Familia </p>
                        </div>
                        <div class="col-md-4">
                            <img class="img-responsive pull-right" src="{{asset('images/bicentenario_independencia_256.png')}}" alt="Logo" />
                        </div>
                    </div>
                </footer>
        {% endblock %}
    </body>
</html>
