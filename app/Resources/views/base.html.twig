<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SIGEINAF{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/normalize.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/estilos.css') }}" type="text/css" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
            <link href="{{ asset('fonts/fontAwesome/css/font-awesome.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/bootstrap-datepicker3.css') }}" type="text/css" rel="stylesheet" />
            <!-- <link href="{{ asset('bundles/kartik-v/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" /> -->
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body class="container-fluid">
        {% block menu %}
            <a id="inf_lnk-muestra-menu" type="button" class="btn"><i class="fa fa-bars fa-2x" aria-hidden="true" onclick="$('#inf_inp_txt_busq-menu').focus();"></i></a>
            <div id="slider" class="usr-menu" style="padding:5px; overflow-y: auto;">
                {% block itemsMenu %}
                    {% include ":menues:principal.html.twig" %}
                {% endblock %}
            </div>
        {% endblock %}
        {% include '::mensajes.html.twig' %}

        {% block contenido %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('smartmenus/addons/bootstrap/jquery.smartmenus.bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery.slidereveal.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/libreria.js') }}" type="text/javascript"></script>
            <!-- <script src="{{ asset('bundles/kartik-v/js/fileinput.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/kartik-v/js/fileinput_locale_es.js') }}" type="text/javascript"></script> -->
        {% endblock %}

        {% block pie%}
        {% endblock %}
    </body>
</html>
